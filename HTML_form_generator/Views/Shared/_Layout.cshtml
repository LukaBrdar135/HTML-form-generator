<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HTML form generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/prism.js"></script>
    <link href="~/Content/prism.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HTML from generator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (!User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Pre-made forms", "preMadeForms", "Generator")</li>
                        <li>@Html.ActionLink("Custom form", "customForm", "Generator")</li>
                        if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("History", "Index", "CodeHistory")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Pre-made forms", "preMadeForms", "Admin")</li>
                        <li>@Html.ActionLink("Users", "allUsers", "Admin")</li>
                        <li>@Html.ActionLink("Styles", "allStyles", "Admin")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <script src="https://code.jquery.com/jquery-3.5.1.js"
                integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
                crossorigin="anonymous"></script>
        @RenderBody()
        <hr />
        <footer>
            <p style="float:right;">&copy; @DateTime.Now.Year - HTML form generator</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
