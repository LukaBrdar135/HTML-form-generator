@model IEnumerable<HTML_form_generator.Models.ApplicationUser>

@{
    ViewBag.Title = "All users";
}

<h2>All users</h2>
<hr />
@if (TempData["success"] != null)
{
    <p style="color: #0f0">
        @TempData["success"].ToString()
    </p>
}

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "editUser", new { id = item.Id }) |
                @Html.ActionLink("Delete", "deleteUser", new { id = item.Id }, new { @style = "color: #f00", onclick = "return confirm(\"Are you sure you want to delete this user?\")" })
            </td>
        </tr>
    }
</table>
